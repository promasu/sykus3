<domain type='kvm'>
  <name>sykusbuild</name>
  <vcpu>2</vcpu>
  <cpu mode='host-passthrough'>
    <topology sockets='1' cores='2' threads='1' />
  </cpu>
  <memory unit='GiB'>2</memory>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
    <boot dev='hd' />
    <boot dev='cdrom' />
  </os>
  <features>
    <pae />
    <acpi />
  </features>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qed' cache='none' />
      <source file='{{BASEDIR}}/disks/sykusbuild.qed' />
      <target dev='vda' bus='virtio' />
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw' />
      <source file='{{BASEDIR}}/disks/srv.iso' />
      <target dev='hdc' bus='ide' />
      <readonly/>
    </disk>
    <interface type='network'>
      <model type='virtio' />
      <mac address='00:ca:fe:01:00:00' />
      <source network='sykus' />
    </interface>
    <graphics type='vnc' autoport='yes' listen='127.0.0.1' keymap='de'>
      <listen type='address' address='127.0.0.1' />
    </graphics>
  </devices>
</domain>

